<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="BookCardFieldValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BookDetailsFieldLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="BookDetailsFieldValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <!-- TODO
            <item name="android:textIsSelectable">true</item>
        -->
    </style>

    <style name="BookDetailsRuler">
        <item name="android:background">#FFE3E6E8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!-- Dialog used for rendering search filter values. -->
    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Editing books through the EditFragment -->
    <style name="EditFieldContainerStyle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="EditFieldLabelStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginStart">12sp</item>
        <item name="android:layout_marginTop">-8sp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="EditTextFieldStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="EditUndoButton">
        <item name="android:layout_width">30sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_arrow_undo_icon</item>
        <item name="android:layout_marginTop">-15sp</item>
        <item name="android:layout_marginEnd">8sp</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>