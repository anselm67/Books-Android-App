<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <View style="@style/BookDetailsRuler"/>

    <TextView
        android:text="@string/detailsLabel"
        style="@style/BookDetailsFieldLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Number of pages -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/numberOfPagesContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        >

        <TextView
            android:id="@+id/numberOfPagesLabelView"
            style="@style/BookDetailsFieldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numberOfPagesLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/numberOfPageView"
            style="@style/BookDetailsFieldValue"
            android:textAlignment="viewEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Language -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/languageContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        >

        <TextView
            android:id="@+id/languageLabelView"
            style="@style/BookDetailsFieldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/languageLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/languageView"
            style="@style/BookDetailsFieldValue"
            android:textAlignment="viewEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ISBN -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/isbnContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        >

        <TextView
            android:id="@+id/isbnLabelView"
            style="@style/BookDetailsFieldValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isbnLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/isbnView"
            style="@style/BookDetailsFieldValue"
            android:textAlignment="viewEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>